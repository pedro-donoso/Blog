<div id="<%= dom_id post %>">
  <p>
    <strong>Image:</strong>
    <%= image_tag post.image, class:"image" %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email %>
  </p>

</div>
